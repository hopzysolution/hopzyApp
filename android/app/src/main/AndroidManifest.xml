<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.hopzy.ridebooking">

    <!-- ðŸ”¹ Permissions -->
    <!-- Networking -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- SMS Auto-fill for OTP -->
    <uses-permission android:name="android.permission.RECEIVE_SMS"/>
    <uses-permission android:name="android.permission.READ_SMS"/>

    <!-- Bluetooth (if you really need all 3, otherwise keep only CONNECT for Android 12+) -->
<!--    <uses-permission android:name="android.permission.BLUETOOTH" />-->
<!--    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />-->
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />

    <!-- Notifications (Android 13+) -->


    <!-- Location (only if required by your app) -->
    <!-- <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" /> -->

    <!-- Storage (safe for Play Store) -->
    <!-- Required for Android 10 and below -->
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="29" />
    <!-- Required for Android 12 and below if you read files -->
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <application
        android:name="${applicationName}"
        android:label="Hopzy"
        android:icon="@mipmap/launcher_icon"
        android:theme="@style/LaunchTheme"
        android:usesCleartextTraffic="true"
        tools:replace="android:label,android:theme"
        >

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:taskAffinity=""
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">

            <!-- Visible theme while Flutter initializes -->
            <meta-data
                android:name="io.flutter.embedding.android.NormalTheme"
                android:resource="@style/NormalTheme" />

            <!-- Launcher intent -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ðŸ”¹ PayU CheckoutPro Activity (REQUIRED) -->
        <activity
            android:name="in.payu.payu_checkoutpro_flutter.PayUCheckoutProFlutterActivity"
            android:exported="true"
            android:configChanges="orientation|keyboardHidden|screenSize|smallestScreenSize"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:hardwareAccelerated="true"
            android:launchMode="singleTop">
            
            <!-- Intent filter for PayU deep links -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="payu" />
            </intent-filter>
        </activity>

        <!-- ðŸ”¹ PayU WebView Activity (REQUIRED for payment flow) -->
        <activity
            android:name="in.payu.payu_checkoutpro_flutter.PayUWebViewActivity"
            android:exported="false"
            android:configChanges="orientation|keyboardHidden|screenSize|smallestScreenSize"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:hardwareAccelerated="true" />

        <!-- Flutter plugin loader -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />

         <!-- Add this for WebView -->
        <meta-data
            android:name="android.webkit.WebView.EnableSafeBrowsing"
            android:value="false" />
    </application>

    <!-- ðŸ”¹ Queries section for Android 11+ visibility and PayU integration -->
    <queries>
        <!-- Text processing -->
        <intent>
            <action android:name="android.intent.action.PROCESS_TEXT" />
            <data android:mimeType="text/plain" />
        </intent>
        
        <!-- PayU related app queries -->
        <package android:name="in.amazon.mshop.android.shopping" />
        <package android:name="com.phonepe.app" />
        <package android:name="com.google.android.apps.nfc.payment" />
        <package android:name="com.paytm.mobile" />
        <package android:name="net.one97.paytm" />
        <package android:name="com.mobikwik_new" />
        <package android:name="com.freecharge.android" />
        <package android:name="in.org.npci.upiapp" />
        <package android:name="com.whatsapp.payments" />
        
        <!-- Browser queries for payment redirects -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <category android:name="android.intent.category.BROWSABLE" />
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="https" />
        </intent>
        
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <category android:name="android.intent.category.BROWSABLE" />
            <data android:scheme="http" />
        </intent>
        
        <!-- UPI payment apps -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <category android:name="android.intent.category.DEFAULT" />
            <data android:scheme="upi" />
        </intent>
        
        <!-- PayU specific schemes -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <category android:name="android.intent.category.DEFAULT" />
            <data android:scheme="payu" />
        </intent>
        
        <!-- Banking apps commonly used in India -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <category android:name="android.intent.category.DEFAULT" />
            <data android:scheme="bhim" />
        </intent>
        
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <category android:name="android.intent.category.DEFAULT" />
            <data android:scheme="phonepe" />
        </intent>
        
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <category android:name="android.intent.category.DEFAULT" />
            <data android:scheme="paytm" />
        </intent>
        
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <category android:name="android.intent.category.DEFAULT" />
            <data android:scheme="gpay" />
        </intent>
    </queries>
</manifest>